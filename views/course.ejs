<!DOCTYPE html>
<html lang="en">
  <%- include("partials/header.ejs") %>
  <body>
    <%- include("./partials/nav.ejs") %>

    <div class="w-50 p-3 mx-auto bg-white rounded">
      <h1><%= course.name %></h1>
      <p><strong>Description:</strong> <%= course.description %></p>
      <p><strong>Subject:</strong> <%= course.subject %></p>
      <p><strong>Credits:</strong> <%= course.credits %></p>

      <div class="d-flex mb-3">
      <a href="/course/edit/<%= course._id %>" class="btn btn-secondary">Edit Course</a>

      <a href="#" id="delete-link" class="delete-link btn btn-danger">Delete Course</a>
      
      <a href="/" class="btn btn-primary ms-auto">Back to Course List</a>
      </div>
    </div>



    <script>
      const deleteLink = document.getElementById("delete-link");

      deleteLink.addEventListener("click", async function (e) {
        e.preventDefault();

        const courseId = "<%= course._id %>";

        if (confirm("Are you sure you want to delete this course?")) {
          try {
            const response = await fetch(`/course/${courseId}`, {
              method: "DELETE",
            });

            const data = await response.json();
            if (data.redirect) {
              window.location.href = data.redirect;
            }
          } catch (err) {
            console.error("Error deleting course:", err);
          }
        }
      });
    </script>

    
  </body>
</html>
